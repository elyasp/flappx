{
  "compilerOptions": {
    "outDir": "./public/js/",
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "lib": ["es2015", "dom"],
    "sourceMap": true
  },
  "include": ["src/client/*"],
  "exclude": ["node_modules"]
}
